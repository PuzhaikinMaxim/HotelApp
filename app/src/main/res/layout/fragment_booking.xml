<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="center"
                style="@style/ToolbarText"
                android:text="Бронирование"/>
        </androidx.appcompat.widget.Toolbar>
        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/Block"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bc_rating"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp">
                <ImageView
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="#FFA800"
                    android:fontFamily="@font/sf_pro_display_medium"
                    tools:text="5 Превосходно"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                style="@style/BlockBigText"
                android:layout_marginTop="10dp"
                tools:text="Steigner Makadi"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_address"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="16sp"
                android:textColor="#0D72FF"
                tools:text="Madinat Makadi, Safaga Road, Makadi Bay, Египет"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/Block"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/TripInfoContainer">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TripInfoTitle"
                    android:text="@string/departure_title"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_departure"
                    style="@style/TripInfo"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/TripInfoContainer"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TripInfoTitle"
                    android:text="Страна, город"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_arrival_country"
                    style="@style/TripInfo"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/TripInfoContainer"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TripInfoTitle"
                    android:text="Даты"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tour_dates"
                    style="@style/TripInfo"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/TripInfoContainer"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TripInfoTitle"
                    android:text="Кол-во ночей"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_number_of_nights"
                    style="@style/TripInfo"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/TripInfoContainer"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TripInfoTitle"
                    android:text="Отель"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_hotel_name"
                    style="@style/TripInfo"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/TripInfoContainer"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TripInfoTitle"
                    android:text="Номер"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_room"
                    style="@style/TripInfo"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/TripInfoContainer"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TripInfoTitle"
                    android:text="Питание"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_nutrition"
                    style="@style/TripInfo"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/Block"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BlockBigText"
                android:text="@string/buyer_info_header"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/hint_phone"
                android:textColorHint="#A9ABB7"
                app:hintTextColor="#A9ABB7"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">
                <com.mxpj.hotelapp.presentation.SuffixEditText
                    android:id="@+id/et_phone"
                    style="@style/EditText"
                    android:inputType="number"
                    android:textColorHint="@drawable/edit_text_hint"
                    android:digits="1234567890+-()* " />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_email"
                android:textColorHint="#A9ABB7"
                app:hintTextColor="#A9ABB7"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    style="@style/EditText"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buyer_info_hint"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="#828796"
                android:layout_marginTop="10dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>
